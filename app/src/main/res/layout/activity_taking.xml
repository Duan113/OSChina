<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container"
    android:orientation="vertical"
    android:background="#F7F7F7"
    tools:context="com.cat.oschina.utils.TakingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10px"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ib_navigation_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/back"
            android:contentDescription="@null"
            />

        <TextView
            android:id="@+id/tv_navigation_label"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="40px"
            android:layout_weight="1"
            android:gravity="center"
            android:text="弹一弹"

            android:textColor="@color/black"
            android:textSize="18sp"/>
<Button
    android:id="@+id/send"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="right"
    android:text="发送"
    android:textColor="@color/black"
    android:textSize="15sp"
    android:background="#F0F0F0"
    android:layout_weight="4"/>

    </LinearLayout>

<EditText
    android:id="@+id/et_content"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:background="@null"
    android:gravity="top|left"
    android:hint="@string/tweet_hint"
    android:padding="12dp"
    android:textColor="?android:editTextColor"
    android:textSize="18sp" />


<View
    style="@style/h_line" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="4" >

    <ImageButton
        android:id="@+id/ib_picture"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@null"
        android:padding="8dp"
        android:src="@drawable/compose_toolbar_picture_selector" />

    <ImageButton
        android:id="@+id/ib_mention"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@null"
        android:padding="8dp"
        android:src="@drawable/compose_toolbar_mention_selector" />

    <ImageButton
        android:id="@+id/ib_trend_software"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@null"
        android:padding="8dp"
        android:src="@drawable/compose_toolbar_trend_selector" />

    <ImageButton
        android:id="@+id/ib_emoji_keyboard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@null"
        android:padding="8dp"
        android:src="@drawable/compose_toolbar_emoji_selector" />
</LinearLayout>

<View
    style="@style/h_line" />

<FrameLayout
    android:id="@+id/emoji_keyboard_fragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom" />

</LinearLayout>