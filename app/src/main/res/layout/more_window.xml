<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rel"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.ms_square.etsyblur.BlurringView
        android:id="@id/blurring_view"
        android:layout_width="match_parent"
        app:radius="17"
        app:overlayColor="#66eeeeee"
        android:layout_height="match_parent"
        />
    <LinearLayout
        android:id="@+id/tv_sbs"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="500dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/cicle"
            android:textColor="@color/white"
            android:text="发动弹"
            android:textSize="15sp" />
        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/background_tweet"
            android:src="@mipmap/ic_nav_tweet_normal"
            android:padding="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/tv_search"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="450dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="写问答"
            android:background="@drawable/cicle"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/background_question"
            android:padding="10dp"
            android:src="@mipmap/ic_my_question" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tv_course"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:layout_marginTop="500dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="投递文章"
            android:background="@drawable/cicle"
            android:textColor="@color/white"
            android:textSize="15sp" />
        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/background_article"
            android:src="@mipmap/ic_my_blog"
            android:padding="10dp"/>
    </LinearLayout>



    <RelativeLayout
        android:id="@+id/rel_close"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="60dp"
            android:src="@drawable/ic_add" />
    </RelativeLayout>


</RelativeLayout>