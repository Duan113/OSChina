<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".my.fragment.MyFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:visibility="visible"
        android:background="@color/green">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:id="@+id/iv_logo_head"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@null"
                    android:scaleType="centerInside"
                    android:background="@drawable/background_white"
                    android:src="@mipmap/wenzhang"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/iv_login"
                    android:text="点击头像登录"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_marginRight="70dp"
                    android:layout_gravity="center"/>

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:id="@+id/iv_logo_setting"
                    android:layout_marginRight="40dp"
                    android:layout_gravity="center_vertical|right"
                    android:contentDescription="@null"
                    android:padding="12dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/btn_my_setting"/>

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:id="@+id/iv_qr_code"
                    android:layout_gravity="center_vertical|right"
                    android:contentDescription="@null"
                    android:padding="12dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/btn_qrcode"/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:id="@+id/img11"
                    android:src="@mipmap/img"/>

            </FrameLayout>

        </FrameLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="3px"
            android:background="#18be40"/>
    </LinearLayout>

